<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activities.OTPActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:fontFamily="@font/roboto_bold"
        android:textAlignment="center"
        android:textSize="28sp"
        android:layout_marginBottom="24dp"
        />


    <EditText
        android:id="@+id/etOTPCode"
        android:hint="OTP Code"
        android:maxLength="4"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:inputType="text"
        android:fontFamily="@font/roboto_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="100dp"
        android:background="@drawable/input_border" />
    <TextView
        android:id="@+id/tvOTPInform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginBottom="12dp"
        android:text="An OTP number has been sent to xxxxxxxxxxxx. Please check your messages." />

    <TextView
        android:id="@+id/tvResendOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:fontFamily="@font/roboto_regular"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"
        android:text="Did not get any OTP Messages? Resend" />

    <Button
        android:id="@+id/btnToDisplayPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:text="Confirm"
        android:layout_marginHorizontal="100dp"
        android:fontFamily="@font/roboto_bold"
        android:backgroundTint="@color/blue_300"
        android:elevation="2dp"
        />

</LinearLayout>