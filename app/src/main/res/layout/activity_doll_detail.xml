<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.DollDetailActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rlDollDetailHeader"
            android:layout_width="match_parent"
            android:showDividers="middle"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="12dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/ivDetailBack"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_24" />
            <ImageView
                android:id="@+id/ivDetailGoToHistory"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_checklist_rtl_24" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/ivDollDetailImage"
            app:layout_constraintTop_toBottomOf="@id/rlDollDetailHeader"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@color/blue_500" />
        <TextView
            android:id="@+id/tvDollDetailPrice"
            app:layout_constraintTop_toBottomOf="@id/ivDollDetailImage"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:text="Rp 129.000"/>
        <TextView
            android:id="@+id/tvDollDetailName"
            app:layout_constraintTop_toBottomOf="@id/tvDollDetailPrice"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:text="Belle Doll"/>
        <LinearLayout
            android:id="@+id/llDetailRatingSize"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvDollDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/grey_outer_border"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivDetailRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_star_24" />
                <TextView
                    android:id="@+id/tvDetailRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_light"
                    android:text="4.9"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:paddingHorizontal="5dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/grey_outer_border"
                android:fontFamily="@font/roboto_light"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivDetailSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_outward_24" />
                <TextView
                    android:id="@+id/tvDetailSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_light"
                    android:text="small"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/ivDetailSpacer"
            app:layout_constraintTop_toBottomOf="@id/llDetailRatingSize"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:src="@drawable/grey_rectangle_border" />
        <TextView
            android:id="@+id/tvProductDetailTitle"
            app:layout_constraintTop_toBottomOf="@id/ivDetailSpacer"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/product_detail"/>
        <TextView
            android:id="@+id/tvProductDetail"
            app:layout_constraintTop_toBottomOf="@id/tvProductDetailTitle"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_light"
            android:text="@string/product_detail"/>
        <LinearLayout
            android:id="@+id/llAmountBuy"
            app:layout_constraintTop_toBottomOf="@id/tvProductDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/etDollDetailAmount"
                android:text="0"
                android:textColor="@color/black"
                android:inputType="number"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingHorizontal="12dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/input_border"
                tools:ignore="RtlCompat" />
            <Button
                android:id="@+id/btnBuyProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:backgroundTint="@color/blue_300"
                android:text="Buy Now"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>