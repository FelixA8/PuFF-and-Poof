<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="0dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="16dp"
    android:innerRadius="0dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="12dp"
            android:id="@+id/tvHistoryTransactionID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 0"
            android:fontFamily="@font/roboto_light"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingLeft="12dp"
                android:id="@+id/tvHistoryDollName"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:text="Bella Doll"/>
            <TextView
                android:paddingRight="12dp"
                android:id="@+id/tvHistoryTransactionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="x63"/>
        </LinearLayout>
        <TextView
            android:paddingLeft="12dp"
            android:id="@+id/tvHistoryTransactionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="13-32-2024 19:00:00"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnHistoryUpdate"
            android:layout_weight="1"
            android:layout_marginRight="12dp"
            android:text="Update"
            android:backgroundTint="@color/blue_300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnHistoryDelete"
            android:layout_weight="1"
            android:text="delete"
            android:backgroundTint="@color/blue_800"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>